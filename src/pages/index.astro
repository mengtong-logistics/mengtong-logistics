---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.tsx';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Philosophy from '../components/Philosophy.astro';
import Protocol from '../components/Protocol.astro';
import Services from '../components/Services.astro';
import NetworkPreview from '../components/NetworkPreview.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <!-- Noise overlay for texture -->
  <svg class="pointer-events-none fixed inset-0 z-50 h-full w-full opacity-[0.03] mix-blend-overlay">
    <filter id="noise">
      <feTurbulence type="fractalNoise" baseFrequency="0.8" numOctaves="3" stitchTiles="stitch" />
    </filter>
    <rect width="100%" height="100%" filter="url(#noise)" />
  </svg>

  <Navbar client:load />
  <Hero />
  <Features />
  <Philosophy />
  <Protocol />
  <NetworkPreview />
  <Services />
  <Footer />
</Layout>
