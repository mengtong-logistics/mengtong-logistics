            const idx = Array.from(slides).indexOf(entry.target);
            currentSlide = idx;
            updateNavDots(idx);
            updateProgress();
            if (idx === 4) animateCounters(entry.target);
          }
        });
      }, { threshold: 0.5, root: container });

      slides.forEach(function(slide) { observer.observe(slide); });

      // --- Keyboard navigation ---
      document.addEventListener('keydown', function(e) {
        if (isAnimating) return;
        switch (e.key) {
          case 'ArrowDown': case 'ArrowRight': case ' ': case 'PageDown':
            e.preventDefault(); nextSlide(); break;
          case 'ArrowUp': case 'ArrowLeft': case 'PageUp':
            e.preventDefault(); prevSlide(); break;
          case 'Home': e.preventDefault(); goToSlide(0); break;
          case 'End': e.preventDefault(); goToSlide(totalSlides - 1); break;
        }
      });

      // --- Touch navigation ---
      var touchStartY = 0;
      container.addEventListener('touchstart', function(e) {
        touchStartY = e.touches[0].clientY;
      }, { passive: true });
      container.addEventListener('touchend', function(e) {
        var diff = touchStartY - e.changedTouches[0].clientY;
        if (Math.abs(diff) > 50) { diff > 0 ? nextSlide() : prevSlide(); }
      }, { passive: true });

      function nextSlide() {
        if (currentSlide < totalSlides - 1) goToSlide(currentSlide + 1);
      }
      function prevSlide() {
        if (currentSlide > 0) goToSlide(currentSlide - 1);
      }
      function goToSlide(index) {
        if (index < 0 || index >= totalSlides || isAnimating) return;
        isAnimating = true;
        slides[index].scrollIntoView({ behavior: 'smooth' });
        currentSlide = index;
        updateNavDots(index);
        updateProgress();
        setTimeout(function() { isAnimating = false; }, 800);
      }

      function updateNavDots(idx) {
        var dots = navDotsContainer.querySelectorAll('.pitch-nav-dot');
        dots.forEach(function(dot, i) { dot.classList.toggle('active', i === idx); });
      }

      function updateProgress() {
        var pct = ((currentSlide + 1) / totalSlides) * 100;
        progressBar.style.width = pct + '%';
      }

      function animateCounters(slide) {
        var counters = slide.querySelectorAll('.counter');
        counters.forEach(function(counter) {
          if (counter.dataset.animated) return;
          counter.dataset.animated = 'true';
          var target = parseInt(counter.dataset.target);
          var duration = 2000;
          var start = performance.now();
          var format = function(n) { return n >= 10000 ? n.toLocaleString('en-US') : n.toString(); };
          var tick = function(now) {
            var elapsed = now - start;
            var progress = Math.min(elapsed / duration, 1);
            var ease = 1 - Math.pow(1 - progress, 3);
            counter.textContent = format(Math.round(ease * target));
            if (progress < 1) requestAnimationFrame(tick);
          };
          requestAnimationFrame(tick);
        });
      }

      // Hide hint after 4s
      setTimeout(function() { if (keyHint) keyHint.style.opacity = '0'; }, 4000);
    })();
  </script>
